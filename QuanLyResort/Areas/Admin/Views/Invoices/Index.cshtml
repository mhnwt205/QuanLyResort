@model IEnumerable<QuanLyResort.ViewModels.InvoiceDto>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý hóa đơn";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Quản lý hóa đơn</h4>
    <a href="@Url.Action("Create", "Invoices", new { area = "Admin" })" class="btn btn-primary">
        <i class="bx bx-plus"></i>Tạo hóa đơn mới
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle" id="invoicesTable">
                <thead>
                    <tr>
                        <th>Số hóa đơn</th>
                        <th>Khách hàng</th>
                        <th>Mã đặt phòng</th>
                        <th>Ngày hóa đơn</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Phương thức thanh toán</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model)
                    {
                        <tr data-invoice-id="@invoice.InvoiceId">
                            <td>
                                <span class="fw-semibold">@invoice.InvoiceNumber</span>
                            </td>
                            <td>@invoice.CustomerName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(invoice.BookingCode))
                                {
                                    <span class="badge bg-label-info">@invoice.BookingCode</span>
                                }
                                else
                                {
                                    <span class="text-muted">Không có</span>
                                }
                            </td>
                            <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="fw-semibold">@invoice.TotalAmount.ToString("N0") VNĐ</span>
                            </td>
                            <td>
                                @switch (invoice.Status)
                                {
                                    case "draft":
                                        <span class="badge bg-label-secondary">Nháp</span>
                                        break;
                                    case "approved":
                                        <span class="badge bg-label-info">Đã duyệt</span>
                                        break;
                                    case "paid":
                                        <span class="badge bg-label-success">Đã thanh toán</span>
                                        break;
                                    case "partial":
                                        <span class="badge bg-label-warning">Thanh toán một phần</span>
                                        break;
                                    case "cancelled":
                                        <span class="badge bg-label-danger">Đã hủy</span>
                                        break;
                                    default:
                                        <span class="badge bg-label-secondary">@invoice.Status</span>
                                        break;
                                }
                            </td>
                            <td>
                                @switch (invoice.PaymentMethod)
                                {
                                    case "cash":
                                        <span class="badge bg-label-primary">Tiền mặt</span>
                                        break;
                                    case "card":
                                        <span class="badge bg-label-info">Thẻ</span>
                                        break;
                                    case "transfer":
                                        <span class="badge bg-label-success">Chuyển khoản</span>
                                        break;
                                    default:
                                        <span class="text-muted">@invoice.PaymentMethod</span>
                                        break;
                                }
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("Details", new { id = invoice.InvoiceId })">
                                            <i class="bx bx-show"></i>Chi tiết
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Create", "Payments", new { area = "Admin", invoiceId = invoice.InvoiceId })">
                                            <i class="bx bx-credit-card"></i>Thanh toán
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Print", new { id = invoice.InvoiceId })" target="_blank">
                                            <i class="bx bx-printer"></i>In hóa đơn
                                        </a>
                                        @if (invoice.Status == "draft")
                                        {
                                            <form asp-action="Approve" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@invoice.InvoiceId" />
                                                <button type="submit" class="dropdown-item" onclick="return confirm('Bạn có chắc muốn duyệt hóa đơn này?')">
                                                    <i class="bx bx-check"></i>Duyệt
                                                </button>
                                            </form>
                                        }
                                        @if (invoice.Status != "paid" && invoice.Status != "cancelled")
                                        {
                                            <a class="dropdown-item" href="@Url.Action("Edit", new { id = invoice.InvoiceId })">
                                                <i class="bx bx-edit"></i>Chỉnh sửa
                                            </a>
                                        }
                                        @if (invoice.Status != "paid")
                                        {
                                            <a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = invoice.InvoiceId })">
                                                <i class="bx bx-trash"></i>Hủy
                                            </a>
                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <i class="bx bx-receipt"></i>
        <h5 class="mt-3 text-muted">Chưa có hóa đơn nào</h5>
        <p class="text-muted">Hãy tạo hóa đơn đầu tiên để bắt đầu quản lý.</p>
        <a href="@Url.Action("Create", "Invoices", new { area = "Admin" })" class="btn btn-primary">
            <i class="bx bx-plus"></i>Tạo hóa đơn mới
        </a>
    </div>
}
