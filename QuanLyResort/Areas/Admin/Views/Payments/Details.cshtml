@model QuanLyResort.ViewModels.PaymentViewModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Chi tiết thanh toán";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Chi tiết thanh toán: @Model.PaymentNumber</h5>
                    <div>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                            <i class="bx bx-arrow-back"></i> Quay lại
                        </a>
                        <a href="@Url.Action("Print", new { id = Model.PaymentId })" class="btn btn-outline-primary ms-2" target="_blank">
                            <i class="bx bx-printer"></i> In biên lai
                        </a>
                        @if (Model.Amount > 0)
                        {
                            <a href="@Url.Action("Refund", new { id = Model.PaymentId })" class="btn btn-warning ms-2">
                                <i class="bx bx-undo"></i> Hoàn tiền
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <!-- Thông tin thanh toán -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">Thông tin thanh toán</h6>
                                </div>
                                <div class="card-body">
                                    <table class="table table-borderless">
                                        <tr>
                                            <td class="fw-semibold">Số thanh toán:</td>
                                            <td><span class="badge bg-label-primary">@Model.PaymentNumber</span></td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Hóa đơn:</td>
                                            <td>
                                                <span class="badge bg-label-info">#@Model.InvoiceId</span>
                                                <a href="@Url.Action("Details", "Invoices", new { area = "Admin", id = Model.InvoiceId })" class="btn btn-sm btn-outline-primary ms-2">
                                                    <i class="bx bx-show"></i> Xem hóa đơn
                                                </a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Ngày thanh toán:</td>
                                            <td>@Model.PaymentDate.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Số tiền:</td>
                                            <td>
                                                <span class="fw-bold fs-5 @(Model.Amount < 0 ? "text-danger" : "text-success")">
                                                    @Model.Amount.ToString("N0") VNĐ
                                                </span>
                                                @if (Model.Amount < 0)
                                                {
                                                    <br><small class="text-muted">Hoàn tiền</small>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Phương thức thanh toán:</td>
                                            <td>
                                                @switch (Model.PaymentMethod)
                                                {
                                                    case "cash":
                                                        <span class="badge bg-label-primary">Tiền mặt</span>
                                                        break;
                                                    case "card":
                                                        <span class="badge bg-label-info">Thẻ</span>
                                                        break;
                                                    case "transfer":
                                                        <span class="badge bg-label-success">Chuyển khoản</span>
                                                        break;
                                                    default:
                                                        <span class="text-muted">@Model.PaymentMethod</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                        @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
                                        {
                                            <tr>
                                                <td class="fw-semibold">Số tham chiếu:</td>
                                                <td>@Model.ReferenceNumber</td>
                                            </tr>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Notes))
                                        {
                                            <tr>
                                                <td class="fw-semibold">Ghi chú:</td>
                                                <td>@Model.Notes</td>
                                            </tr>
                                        }
                                        <tr>
                                            <td class="fw-semibold">Người xử lý:</td>
                                            <td>@Model.ProcessedBy</td>
                                        </tr>
                                        <tr>
                                            <td class="fw-semibold">Ngày tạo:</td>
                                            <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin hóa đơn liên quan -->
                        <div class="col-md-6">
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">Thông tin hóa đơn</h6>
                                </div>
                                <div class="card-body">
                                    <div class="text-center">
                                        <p class="text-muted">Thông tin chi tiết hóa đơn sẽ được hiển thị tại đây</p>
                                        <a href="@Url.Action("Details", "Invoices", new { area = "Admin", id = Model.InvoiceId })" class="btn btn-primary">
                                            <i class="bx bx-show"></i> Xem chi tiết hóa đơn
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Thống kê thanh toán -->
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">Thống kê</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-6">
                                            <div class="border-end">
                                                <h4 class="mb-1">@Model.Amount.ToString("N0")</h4>
                                                <small class="text-muted">Số tiền</small>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <h4 class="mb-1">@Model.PaymentMethod.ToUpper()</h4>
                                            <small class="text-muted">Phương thức</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Thao tác -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">Thao tác</h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex flex-wrap gap-2">
                                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                            <i class="bx bx-list-ul"></i> Danh sách thanh toán
                                        </a>
                                        <a href="@Url.Action("Print", new { id = Model.PaymentId })" class="btn btn-outline-primary" target="_blank">
                                            <i class="bx bx-printer"></i> In biên lai
                                        </a>
                                        @if (Model.Amount > 0)
                                        {
                                            <a href="@Url.Action("Refund", new { id = Model.PaymentId })" class="btn btn-warning">
                                                <i class="bx bx-undo"></i> Hoàn tiền
                                            </a>
                                        }
                                        <a href="@Url.Action("Details", "Invoices", new { area = "Admin", id = Model.InvoiceId })" class="btn btn-info">
                                            <i class="bx bx-receipt"></i> Xem hóa đơn
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
