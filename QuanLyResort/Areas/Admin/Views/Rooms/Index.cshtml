@model IEnumerable<QuanLyResort.Models.Room>

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý phòng";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">Quản lý phòng</h4>
    <a href="@Url.Action("Create", "Rooms", new { area = "Admin" })" class="btn btn-primary">
        <i class="bx bx-plus"></i>Thêm phòng mới
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Mã phòng</th>
                        <th>Số phòng</th>
                        <th>Loại phòng</th>
                        <th>Trạng thái</th>
                        <th>Giá</th>
                        <th>Sức chứa</th>
                        <th>Mô tả</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model)
                    {
                        <tr>
                            <td>@room.RoomId</td>
                            <td>@room.RoomNumber</td>
                            <td>@room.RoomType?.RoomTypeId</td>
                            <td>
                                @switch (room.Status)
                                {
                                    case "Available":
                                        <span class="badge bg-success">Có sẵn</span>
                                        break;
                                    case "Booked":
                                        <span class="badge bg-warning">Đã đặt</span>
                                        break;
                                    case "Occupied":
                                        <span class="badge bg-danger">Đang sử dụng</span>
                                        break;
                                    case "Maintenance":
                                        <span class="badge bg-info">Bảo trì</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">@room.Status</span>
                                        break;
                                }
                            </td>
                            <td>N/A</td>
                            <td>N/A</td>
                            <td>N/A</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("Details", "Rooms", new { area = "Admin", id = room.RoomId })">
                                            <i class="bx bx-show"></i>Xem chi tiết
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Edit", "Rooms", new { area = "Admin", id = room.RoomId })">
                                            <i class="bx bx-edit-alt"></i>Chỉnh sửa
                                        </a>
                                        <a class="dropdown-item" href="@Url.Action("Delete", "Rooms", new { area = "Admin", id = room.RoomId })">
                                            <i class="bx bx-trash"></i>Xóa
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="empty-state">
        <i class="bx bx-home-circle"></i>
        <h5 class="mt-3 text-muted">Chưa có phòng nào</h5>
        <p class="text-muted">Hãy thêm phòng đầu tiên để bắt đầu quản lý.</p>
        <a href="@Url.Action("Create", "Rooms", new { area = "Admin" })" class="btn btn-primary">
            <i class="bx bx-plus"></i>Thêm phòng mới
        </a>
    </div>
}
