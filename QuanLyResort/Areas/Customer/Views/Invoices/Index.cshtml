@model IEnumerable<QuanLyResort.ViewModels.InvoiceDto>

@{
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
    ViewData["Title"] = "Hóa đơn của tôi";
}

<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header-content">
                    <h1>Hóa đơn của tôi</h1>
                    <p>Xem lại các hóa đơn và thanh toán tại Resort Deluxe</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="invoices-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Danh sách hóa đơn</h4>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table table-striped" id="customerInvoicesTable">
                                <thead>
                                    <tr>
                                        <th>Số hóa đơn</th>
                                        <th>Mã đặt phòng</th>
                                        <th>Ngày hóa đơn</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Phương thức</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var invoice in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="fw-semibold">@invoice.InvoiceNumber</span>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(invoice.BookingCode))
                                                {
                                                    <span class="badge bg-info">@invoice.BookingCode</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Không có</span>
                                                }
                                            </td>
                                            <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="fw-semibold">@invoice.TotalAmount.ToString("N0") VNĐ</span>
                                            </td>
                                            <td>
                                                @switch (invoice.Status)
                                                {
                                                    case "draft":
                                                        <span class="badge bg-warning">Nháp</span>
                                                        break;
                                                    case "approved":
                                                        <span class="badge bg-success">Đã duyệt</span>
                                                        break;
                                                    case "paid":
                                                        <span class="badge bg-primary">Đã thanh toán</span>
                                                        break;
                                                    case "partial":
                                                        <span class="badge bg-info">Thanh toán một phần</span>
                                                        break;
                                                    case "cancelled":
                                                        <span class="badge bg-danger">Đã hủy</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@invoice.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @switch (invoice.PaymentMethod)
                                                {
                                                    case "cash":
                                                        <span class="badge bg-primary">Tiền mặt</span>
                                                        break;
                                                    case "card":
                                                        <span class="badge bg-info">Thẻ</span>
                                                        break;
                                                    case "transfer":
                                                        <span class="badge bg-success">Chuyển khoản</span>
                                                        break;
                                                    default:
                                                        <span class="text-muted">@invoice.PaymentMethod</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <div class="table-actions">
                                                    <a href="@Url.Action("Details", new { id = invoice.InvoiceId })" class="btn btn-sm btn-outline-primary">
                                                        <i class="fa fa-eye me-2"></i>Chi tiết
                                                    </a>
                                                    <a href="@Url.Action("Print", new { id = invoice.InvoiceId })" class="btn btn-sm btn-outline-secondary" target="_blank">
                                                        <i class="fa fa-print me-2"></i>In
                                                    </a>
                                                    @if (invoice.Status == "approved" && invoice.Status != "paid")
                                                    {
                                                        <a href="@Url.Action("Create", "Payments", new { area = "Customer", invoiceId = invoice.InvoiceId })" class="btn btn-sm btn-success">
                                                            <i class="fa fa-credit-card me-2"></i>Thanh toán
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#customerInvoicesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                },
                "order": [[0, "desc"]],
                "pageLength": 10,
                "responsive": true
            });
        });
    </script>
}
