@model List<QuanLyResort.ViewModels.RoomSearchResultViewModel>
@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "Phòng";
    var searchModel = ViewBag.SearchModel as QuanLyResort.ViewModels.SearchRoomViewModel ?? new QuanLyResort.ViewModels.SearchRoomViewModel();
    var roomTypes = ViewBag.RoomTypes as List<QuanLyResort.Models.RoomType> ?? new List<QuanLyResort.Models.RoomType>();
}

<div class="hero-wrap" style="background-image: url(@Url.Content("~/deluxe-assets/images/bg_1.jpg"));">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <p class="breadcrumbs mb-2"><span class="mr-2"><a href="/Customer">Trang Chủ</a></span> <span>Phòng</span></p>
                    <h1 class="mb-4 bread">Phòng</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @if ((ViewBag.HasSearch as bool? ?? false) && searchModel.CheckInDate != default(DateTime) && searchModel.CheckOutDate != default(DateTime))
                {
                    <div class="alert alert-info mb-4">
                        <h5>Kết quả tìm kiếm phòng</h5>
                        <p><strong>Ngày nhận phòng:</strong> @searchModel.CheckInDate.ToString("dd/MM/yyyy")</p>
                        <p><strong>Ngày trả phòng:</strong> @searchModel.CheckOutDate.ToString("dd/MM/yyyy")</p>
                        <p><strong>Số khách:</strong> @searchModel.GuestCount người</p>
                        @if (searchModel.RoomTypeId.HasValue)
                        {
                            var roomType = roomTypes.FirstOrDefault(rt => rt.RoomTypeId == searchModel.RoomTypeId.Value);
                            <p><strong>Loại phòng:</strong> @(roomType?.TypeName ?? "Không xác định")</p>
                        }
                        <a class="btn btn-sm btn-outline-secondary ms-2" href="@Url.Action("Index","Rooms", new { area = "Customer" })"><i class="fas fa-times me-2"></i>Xóa bộ lọc</a>
                    </div>
                }

                @if (Model != null && Model.Any())
                {
                    <div class="row">
                        @foreach (var room in Model)
                        {
                            <div class="col-sm col-md-6 col-lg-4 ftco-animate">
                                <div class="room h-100 d-flex flex-column">
                                    <a href="@Url.Action("Details", "Rooms", new { id = room.RoomId })" class="img d-flex justify-content-center align-items-center" style="background-image: url(@Url.Content(room.ImageUrl));">
                                        <div class="icon d-flex justify-content-center align-items-center">
                                            <span class="icon-search2"></span>
                                        </div>
                                    </a>
                                    <div class="text p-3 text-center d-flex flex-column flex-grow-1">
                                        <h3 class="mb-3"><a href="@Url.Action("Details", "Rooms", new { id = room.RoomId })">@room.RoomTypeName - @room.RoomNumber</a></h3>
                                        <p><span class="price mr-2">@room.Price.ToString("N0")₫</span> <span class="per">mỗi đêm</span></p>
                                        <ul class="list">
                                            <li><span>Tối đa:</span> @room.MaxOccupancy Người</li>
                                            <li><span>Trạng thái:</span> @room.Status</li>
                                            @if (!string.IsNullOrEmpty(room.Description))
                                            {
                                                <li><span>Mô tả:</span> @room.Description</li>
                                            }
                                        </ul>
                                        <hr>
                                        <div class="d-grid gap-2 pt-1 mt-auto">
                                            <a href="@Url.Action("Details", "Rooms", new { id = room.RoomId })" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-info-circle me-2"></i>Xem chi tiết
                                            </a>
                                            @if (room.IsAvailable)
                                            {
                                                <a href="@Url.Action("Book", "OnlineBooking", new { roomId = room.RoomId })" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-calendar-check me-2"></i>Đặt Ngay
                                                </a>
                                            }
                                            else
                                            {
                                                <button class="btn btn-secondary btn-sm" disabled>
                                                    <i class="fas fa-ban me-2"></i>Đã đặt
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <h5>Không tìm thấy phòng phù hợp</h5>
                        <p>Xin lỗi, không có phòng nào phù hợp với tiêu chí tìm kiếm của bạn. Vui lòng thử lại với các tiêu chí khác.</p>
                    </div>
                }
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                <li><a href="#">&lt;</a></li>
                                <li class="active"><span>1</span></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                                <li><a href="#">&gt;</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 sidebar">
                <div class="sidebar-wrap bg-light ftco-animate">
                    <h3 class="heading mb-4">Tìm Kiếm Phòng</h3>
                    <form asp-action="Index" asp-controller="Rooms" method="get">
                        <div class="fields">
                            <div class="form-group">
                                <label for="searchKeyword">Từ khóa tìm kiếm</label>
                                <input type="text" name="searchKeyword" id="searchKeyword" class="form-control" placeholder="Tên phòng, loại phòng" value="@searchModel.SearchKeyword">
                            </div>
                            <div class="form-group">
                                <label for="checkInDate">Ngày nhận phòng</label>
                                <input type="date" name="checkInDate" id="checkInDate" class="form-control" value="@(searchModel.CheckInDate != default(DateTime) ? searchModel.CheckInDate.ToString("yyyy-MM-dd") : "")">
                            </div>
                            <div class="form-group">
                                <label for="checkOutDate">Ngày trả phòng</label>
                                <input type="date" name="checkOutDate" id="checkOutDate" class="form-control" value="@(searchModel.CheckOutDate != default(DateTime) ? searchModel.CheckOutDate.ToString("yyyy-MM-dd") : "")">
                            </div>
                            <div class="form-group">
                                <label for="guestCount">Số khách</label>
                                <div class="select-wrap one-third">
                                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                    <select name="guestCount" id="guestCount" class="form-control">
                                        <option value="1" @(searchModel.GuestCount == 1 ? "selected" : "")>1 Người</option>
                                        <option value="2" @(searchModel.GuestCount == 2 ? "selected" : "")>2 Người</option>
                                        <option value="3" @(searchModel.GuestCount == 3 ? "selected" : "")>3 Người</option>
                                        <option value="4" @(searchModel.GuestCount == 4 ? "selected" : "")>4 Người</option>
                                        <option value="5" @(searchModel.GuestCount == 5 ? "selected" : "")>5 Người</option>
                                        <option value="6" @(searchModel.GuestCount == 6 ? "selected" : "")>6 Người</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="roomTypeId">Loại phòng</label>
                                <div class="select-wrap one-third">
                                    <div class="icon"><span class="ion-ios-arrow-down"></span></div>
                                    <select name="roomTypeId" id="roomTypeId" class="form-control">
                                        <option value="">Tất cả loại phòng</option>
                                        @foreach (var roomType in roomTypes)
                                        {
                                            <option value="@roomType.RoomTypeId" @(searchModel.RoomTypeId == roomType.RoomTypeId ? "selected" : "")>@roomType.TypeName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="maxPrice">Giá tối đa (₫)</label>
                                <input type="number" name="maxPrice" id="maxPrice" class="form-control" placeholder="Nhập giá tối đa" value="@searchModel.MaxPrice">
                            </div>
                            <div class="form-group">
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary py-3">
                                        <i class="fas fa-search me-2"></i>Tìm Kiếm
                                    </button>
                                    <a href="@Url.Action("Index","Rooms", new { area = "Customer" })" class="btn btn-outline-secondary py-3">
                                        <i class="fas fa-redo me-2"></i>Xóa bộ lọc
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
