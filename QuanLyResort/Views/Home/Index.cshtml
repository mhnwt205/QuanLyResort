@{
    ViewData["Title"] = "Quản Lý Resort";
    Layout = null;
}

<!DOCTYPE html>
<html
  lang="vi"
  class="light-style layout-menu-fixed"
  dir="ltr"
  data-theme="theme-default"
  data-assets-path="~/sneat-assets/"
  data-template="vertical-menu-template-free"
>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0"
    />

    <title>@ViewData["Title"] - Resort Management System</title>

    <meta name="description" content="Hệ thống quản lý resort chuyên nghiệp với giao diện hiện đại" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/sneat-assets/img/favicon/favicon.ico" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />

    <!-- Icons -->
    <link rel="stylesheet" href="~/sneat-assets/vendor/fonts/boxicons.css" />

    <!-- Core CSS -->
    <link rel="stylesheet" href="~/sneat-assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/sneat-assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />

    <!-- Vendors CSS -->
    <link rel="stylesheet" href="~/sneat-assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <!-- Page CSS -->
    <style>
      .selection-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
      }
      .selection-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        padding: 3rem;
        text-align: center;
        max-width: 800px;
        width: 100%;
        margin: 0 1rem;
      }
      .selection-title {
        color: #2c3e50;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
      }
      .selection-subtitle {
        color: #7f8c8d;
        font-size: 1.2rem;
        margin-bottom: 3rem;
      }
      .selection-buttons {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
      }
      .selection-btn {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 15px;
        padding: 2rem;
        color: white;
        text-decoration: none;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        min-height: 200px;
      }
      .selection-btn:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        color: white;
      }
      .selection-btn.admin {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
      }
      .selection-btn.customer {
        background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
      }
      .btn-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
      }
      .btn-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
      }
      .btn-description {
        font-size: 1rem;
        opacity: 0.9;
      }
      .footer {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid #ecf0f1;
        color: #7f8c8d;
      }
    </style>

    <!-- Helpers -->
    <script src="~/sneat-assets/vendor/js/helpers.js"></script>

    <!--! Template customizer & Theme config files MUST be included after core stylesheets and helpers.js in the <head> section -->
    <!--? Config:  Mandatory theme config file contain essential vars & default theme options, Set your preferred theme option in this file.  -->
    <script src="~/sneat-assets/js/config.js"></script>
  </head>

  <body>
    <div class="selection-container">
      <div class="selection-card">
        <h1 class="selection-title">
          <i class="bx bx-hotel"></i> Quản Lý Resort
        </h1>
        <p class="selection-subtitle">
          Chọn giao diện phù hợp để truy cập hệ thống quản lý resort
        </p>
        
        <div class="selection-buttons">
          <a href="@Url.Action("Admin")" class="selection-btn admin">
            <i class="bx bx-shield btn-icon"></i>
            <div class="btn-title">Giao Diện Admin</div>
            <div class="btn-description">
              Quản lý phòng, đặt phòng, thanh toán, báo cáo và các chức năng quản trị
            </div>
          </a>
          
          <a href="@Url.Action("Customer")" class="selection-btn customer">
            <i class="bx bx-user btn-icon"></i>
            <div class="btn-title">Giao Diện Khách Hàng</div>
            <div class="btn-description">
              Đặt phòng, xem dịch vụ, thanh toán và quản lý thông tin cá nhân
            </div>
          </a>
        </div>
        
        <div class="footer">
          <p>&copy; 2025 - Hệ thống Quản lý Resort - Phiên bản 1.0</p>
        </div>
      </div>
</div>

    <!-- Core JS -->
    <script src="~/sneat-assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/sneat-assets/vendor/libs/popper/popper.js"></script>
    <script src="~/sneat-assets/vendor/js/bootstrap.js"></script>
    <script src="~/sneat-assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/sneat-assets/vendor/js/menu.js"></script>
    <script src="~/sneat-assets/js/main.js"></script>
  </body>
</html>